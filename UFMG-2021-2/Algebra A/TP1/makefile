CXX       := gcc
CXX_FLAGS := -ggdb -g -O3 -lgmp

BIN     := bin
SRC     := src
INCLUDE := include
LIB     := lib
LIBRARIES   := 
EXECUTABLE  := out


all: $(BIN)/$(EXECUTABLE)

run: clean all
	clear
	@echo "ðŸš€ Executing..."
	./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(SRC)/*.c
	@echo "ðŸš§ Building..."
	$(CXX) $(CXX_FLAGS) -I$(INCLUDE) -L$(LIB) $^ -o $@ $(LIBRARIES)

clean:
	@echo "ðŸ§¹ Clearing..."
	-rm $(BIN)/*